<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form", "data-turbo" => "false", method: :put }) do |f| %>
  <%= form_error_notification(resource) %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password,
              label: "New password",
              required: true,
              autofocus: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: { autocomplete: "new-password" },
              wrapper_html: { class: 'form__group-vertical' } %>

  <%= f.input :password_confirmation,
              label: "Confirm your new password",
              required: true,
              input_html: { autocomplete: "new-password" },
              wrapper_html: { class: 'form__group-vertical' } %>

  
  <%= f.button :submit, "Change my password", class: "btn btn--secondary form__submit" %>
<% end %>

<div class="authentication__actions">
  <%= render "devise/shared/links" %>
</div>
