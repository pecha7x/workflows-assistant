<%= form.simple_fields_for :settings do |s| %>
  <% assistant_configuration.class.visible_settings_fields.each do |field_name, field_settings| %>
    <% field_value = assistant_configuration.send(field_name) %>
    <%= s.input field_name,
        placeholder: (I18n.t!(field_name.to_s, scope: 'simple_form.labels.job_source') rescue settings_field_placeholder(field_name)),
        as: field_settings[:type],
        disabled: !field_settings[:editable],
        checked_value: 'true',
        unchecked_value: 'false',
        input_html: { value: field_value, checked: field_value == 'true' } %>
  <% end %>
<% end %>
